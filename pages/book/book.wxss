/* pages/book/book.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.header {
  position: fixed;
  background-color: #fff;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
  box-sizing: border-box;
}
.box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 68rpx;
  width: 700rpx;
  color: #999;
}
.box image {
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
}
.box text {
  font-size: 30rpx;
}
.sub-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-color: #f5f5f5;
  margin-top: 100rpx;
  width: 100%;
}
.head-img {
  width: 106rpx;
  height: 34rpx;
  position: relative;
  top: 10rpx;
}
.book-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  padding: 0rpx 50rpx;
}
w-book {
  margin-bottom: 10rpx;
}